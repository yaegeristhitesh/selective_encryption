{
  "name": "SelectiveCrypt DevContainer",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": ".."
  },
  "runArgs": ["--init"],
  "postCreateCommand": "pip3 install pycryptodome",
  "postStartCommand": "make clean && make",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
